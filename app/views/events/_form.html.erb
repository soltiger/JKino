<script>
	$(function() {
		$( ".event_date" ).datepicker( {dateFormat: "dd-mm-yy"} );
	});
</script>

<%= form_for(@event) do |f| %>
	<% if @event.errors.any? %>
		<div id="error_explanation">
			<h2>
				Tallentaminen epäonnistui:
			</h2>

			<ul>
				<% @event.errors.full_messages.each do |msg| %>
					<li>
						<%= msg %>
					</li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field input-group input-group-lg">
		<span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
		<%= f.text_field :event_date, :class => "event_date form-control", :placeholder => "Esityksen ajankohta" %>
	</div>

	<div class="field input-group input-group-lg">
		<span class="input-group-addon"><i class="glyphicon glyphicon-info-sign"></i></span>
		<%= f.text_field :event_name, :class => "form-control", :placeholder => "Esityksen nimi" %>
	</div>

	<div class="field input-group input-group-lg">
		<span class="input-group-addon"><i class="glyphicon glyphicon-film"></i></span>
		<input type="text" class="form-control" placeholder ="Elokuvat">
	</div>

	<div class="field input-group input-group-lg">
		<span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
		<input type="text" class="form-control" placeholder ="Osallistujamäärä">
	</div>
	
	<div class="actions">
		<%= f.submit "Lisää esitys", :class => "btn btn-default" %>
		<%= link_to 'Takaisin esityksiin', events_path, :class => "btn btn-default" %>
	</div>	
<% end %>